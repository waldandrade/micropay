{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowJs": true,
    "outDir": "dist",
    "rootDirs": ["src", "tests"],
    "esModuleInterop": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },
    "skipLibCheck": true
  },
  "include": ["src", "tests"],
  "exclude": []
}