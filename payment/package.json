{
  "name": "micropay-integrations",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "dev": "tsx watch --env-file=.env ./src/server.ts",
    "debug": "tsx watch --env-file=.env --inspect-brk ./src/server.ts",
    "swagger": "node -r tsconfig-paths/register -r ts-node/register --env-file=.env ./src/configs/swagger/generate.ts",
    "test": "jest --coverage --no-cache",
    "build": "rimraf dist && tsc --project tsconfig-build.json && tscpaths -p tsconfig-build.json -s ./src -o ./dist",
    "start": "node dist/server.js"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.11.0",
    "ioredis-mock": "^8.9.0",
    "jest": "^30.0.5",
    "redis-mock": "^0.56.3",
    "rimraf": "^6.0.1",
    "supertest": "^7.1.4",
    "swagger-autogen": "^2.23.7",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tscpaths": "^0.0.9",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "ioredis": "^5.7.0",
    "jsonwebtoken": "^9.0.2",
    "ms": "^2.1.3",
    "prom-client": "^15.1.3",
    "swagger-ui-express": "^5.0.1",
    "tsconfig-paths": "^4.2.0",
    "winston": "^3.17.0"
  }
}
