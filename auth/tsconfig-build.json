{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
		"module": "CommonJS",
    "moduleResolution": "node",
		"resolveJsonModule": true,
		"allowJs": true,
    "outDir": "dist",
    "rootDir": "src",
		"esModuleInterop": true,
		"baseUrl": "src",
		"paths": {
			"@/*": ["*"]
    },
    "skipLibCheck": true
  },
  "exclude": ["tests"]
}