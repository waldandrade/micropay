{
	"compilerOptions": {
		"moduleDetection": "force",
		"module": "Preserve",
		"resolveJsonModule": true,
		"allowJs": true,
		"esModuleInterop": true,
		"isolatedModules": true,
    "baseUrl": "src",
    "paths": {
      "@/tests/*": ["../tests/*"],
      "@/*": ["*"]
    }
	},
  "include": ["src", "tests"],
  "exclude": []
}